<%= form_for @attraction, url: {action: :update } do |f| %>
    <p>
        <%= f.label :name, '名称' %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :text, '紹介文' %><br>
        <%= f.text_area :text %>
    </p>
    <p>
        ジャンル<br>
        <%= f.check_box :genre, {multiple: true, checked: @attraction.genre.include?("レジャー")}, @genres[0], nil %>
        <%= f.label :genre, "レジャー" %>
        <%= f.check_box :genre, {multiple: true, checked: @attraction.genre.include?("文化・歴史")}, @genres[1], nil %>
        <%= f.label :genre, "文化・歴史" %>
        <%= f.check_box :genre, {multiple: true, checked: @attraction.genre.include?("自然")}, @genres[2], nil %>
        <%= f.label :genre, "自然" %>
        <%= f.check_box :genre, {multiple: true, checked: @attraction.genre.include?("芸術")}, @genres[3], nil %>
        <%= f.label :genre, "芸術" %>
