<%= form_for @attraction, url: {action: :update } do |f| %>
    <p>
        <%= f.label :name, '名称' %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :text, '紹介文' %><br>
        <%= f.text_area :text %>
    </p>
    
    <%#画像%>
    
    <p>
        ジャンル<br>
        <%= f.check_box :genre, {multiple: true, checked: false}, @genres[0], nil %>
        <%= f.label :genre, "レジャー" %>
        <%= f.check_box :genre, {multiple: true, checked: false}, @genres[1], nil %>
        <%= f.label :genre, "文化・歴史" %>
        <%= f.check_box :genre, {multiple: true, checked: false}, @genres[2], nil %>
        <%= f.label :genre, "自然" %>
        <%= f.check_box :genre, {multiple: true, checked: false}, @genres[3], nil %>
        <%= f.label :genre, "芸術" %>
        <%= f.check_box :genre, {multiple: true, checked: false}, @genres[4], nil %>
        <%= f.label :genre, "ショッピング" %>
        <%= f.check_box :genre, {multiple: true, checked: false}, @genres[5], nil %>
        <%= f.label :genre, "温泉" %>
        <%= f.check_box :genre, {multiple: true, checked: false}, @genres[6], nil %>
        <%= f.label :genre, "生き物" %>
    </p>
    <p>
        都道府県
        <%= f.select :prefecture,  ['北海道', ' 青森県', '岩手県', '宮城県', '秋田県', '山形県', '福島県', '茨城県', '栃木県', '群馬県', '埼玉県', '千葉県', 
        '東京都', '神奈川県', '新潟県', '富山県', '石川県', '福井県', '山梨県', '長野県', '岐阜県', '静岡県', '愛知県', '三重県', '滋賀県', '京都府', '大阪府', 
        '兵庫県', '奈良県', '和歌山県', '鳥取県', '島根県', '岡山県', '広島県', '山口県', '徳島県', '香川県', '愛媛県', '高知県', '福岡県', '佐賀県', '長崎県', 
        '熊本県', '大分県', '宮崎県', '鹿児島県', '沖縄県'], {include_blank: '選択'} %>
    <p>
    <p>
        <%= f.label :address, '住所' %>
        <%= f.text_field :address %>
    </p>
    <p>
        <%= f.label :open_time, '営業日時' %>
        <%= f.text_field :open_time %>
    </p>
    <p>
        <%= f.label :url, 'URL' %>
        <%= f.text_field :url %>
    </p>
    <p>
        <%= f.label :contact, 'お問い合わせ先' %>
        <%= f.text_field :contact %>
    </p>
    <%= f.submit '編集' %>
    
<% end %>